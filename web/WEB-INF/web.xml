<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.servlet.user.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.servlet.user.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowServlet</servlet-name>
        <servlet-class>com.servlet.commodity.ShowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCommodityServlet</servlet-name>
        <servlet-class>com.servlet.commodity.AddCommodityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.servlet.commodity.AddCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCartServlet</servlet-name>
        <servlet-class>com.servlet.commodity.DeleteCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCommodityServlet</servlet-name>
        <servlet-class>com.servlet.commodity.UpdateCommodityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createOrderGoodServlet</servlet-name>
        <servlet-class>com.servlet.order.createOrderGood</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createOrderServlet</servlet-name>
        <servlet-class>com.servlet.order.createOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/user/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowServlet</servlet-name>
        <url-pattern>/commodity/show</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCommodityServlet</servlet-name>
        <url-pattern>/commodity/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/commodity/addcart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCartServlet</servlet-name>
        <url-pattern>/commodity/deletecart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCommodityServlet</servlet-name>
        <url-pattern>/commodity/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createOrderGoodServlet</servlet-name>
        <url-pattern>/order/createordergood</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createOrderServlet</servlet-name>
        <url-pattern>/order/createorder</url-pattern>
    </servlet-mapping>
</web-app>